<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context="com.juliemenge.juliemengesresume.MainActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="97dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="JULIE MENGE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workExperienceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORK EXPERIENCE"
                android:textColor="@color/colorPrimary"/>

            <net.expandable.ExpandableTextView
                android:id="@+id/workExperienceExpandableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/work_experience"
                app:collapse_lines="1"
                app:expand="false"
                app:expand_enabled="true"/>

            <TextView
                android:id="@+id/educationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDUCATION"
                android:textColor="@color/colorPrimary"/>

            <net.expandable.ExpandableTextView
                android:id="@+id/educationExpandableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/education"
                app:collapse_lines="1"
                app:expand="false"
                app:expand_enabled="true"/>

            <TextView
                android:id="@+id/communityInvovlementTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMMUNITY INVOLVEMENT"
                android:textColor="@color/colorPrimary"/>

            <net.expandable.ExpandableTextView
                android:id="@+id/communityInvolvementExpandableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/community_involvement"
                app:collapse_lines="1"
                app:expand="false"
                app:expand_enabled="true"/>

            <TextView
                android:id="@+id/sitesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SITES"
                android:textColor="@color/colorPrimary"/>

            <net.expandable.ExpandableTextView
                android:id="@+id/sitesExpandableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/sites"
                app:collapse_lines="1"
                app:expand="false"
                app:expand_enabled="true"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
